package practicing;
import java.io.*;
import java.util.*;
public class iof {
	private static final String FILENAME = "C:\\Users\\s422787\\eclipse-workspace\\Practices\\new.txt";
	private static final String FILENAME2 = "C:\\Users\\s422787\\eclipse-workspace\\Practices\\count";

	private static int counter;
	public static void main(String[] args) {


		FileWriter bw = null;
		File
		Scanner br = null;
		try {
			br = new Scanner(new File(FILENAME));
			while(br.hasNextInt()) {
			counter = br.nextInt();
			}
		}catch(Exception e) {
			System.out.println("error reading file");
		}
		try {
			
			counter++;
			
			String content = "gang" + counter + "\n";

			bw = new FileWriter(FILENAME,true));

			bw.write(content);

			bw.close();
			System.out.println("Done");

		} catch (IOException e) {

			e.printStackTrace();

		} 

		}

	}

